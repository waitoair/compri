<div class="container book-form my-5">
  <div class="card" style="max-width: 100wh;">
    <div class="row g-0">
      <div class="col-md-3 photo">
        <%= cl_image_tag @book.photo.key, height: 350, width: 350, crop: :fit if @book.photo.attached? %>
      </div>

      <div class="col-md-6 px-5">
        <div class="card-body">
          <h5 class="card-title"> <%= @book.title %> </h5>
          <p class="card-text"> <b> Language: </b> <%= @book.language %> </p>
          <p class="card-text"> <b> Author: </b> <%= @book.author %> </p>
          <p class="card-text description"> <b> Description: </b> <%= @book.description %> </p>
        </div>
      </div>

    <div class="col-md-3 px-5 my-5 target">
      <% if current_user && current_user.watch_lists.where(book: @book).empty? || !current_user %>
          <%= simple_form_for [@book, @watch_list] do |f| %>
            <b><%= f.input :target_price, label:"Price alert:", label_html: { class: 'target-form' } %></b>
            <button type="submit" class="btn btn-red btn-target"> Add to list &#10084;</button>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container my-5">
  <% @book.deals.order(:price).each do |deal| %>
  <div class="card-product row">
    <%= cl_image_tag @book.photo.key, height: 200, width: 200, crop: :pad, class:"photo-deal" if @book.photo.attached? %>
    <%= cl_image_tag deal.photo.key, height: 200, width: 200, crop: :fit, class: "col-md-2" if deal.photo.attached? %>
<!------- TEXTO DO CARD ------>
    <div class="card-product-infos col-md-4 ">
      <h4> <%= "$ #{deal.price}" %> </h4>
      <p><%= "#{deal.store}"%></p>
    </div>
    <!------ BOTÃƒO ------->
    <div class="col-md-2 d-flex align-center my-5 ml-auto">
      <%= link_to "Store", root_path, class: "btn btn-red ", style: "text-decoration: none;" %>
    </div>
  </div>
  <% end %>
</div>
